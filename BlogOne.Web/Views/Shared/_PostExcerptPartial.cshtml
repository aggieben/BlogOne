@model BlogOne.Web.ViewModel.PostViewModel

<article>
    <header>
        <h1 class="title">@Html.ActionLink(Model.Title, "Details", "Post", new { slug = Model.Slug }, null)</h1>
        <h2 class="subtitle"></h2>
        <span>@(Model.ModifiedDate.HasValue ? String.Format("Updated {0:g}", Model.ModifiedDate.Value) : String.Format("Posted {0:g}", Model.CreationDate))</span>
        <span>@Html.ActionLink("Comments", "Details", "Post", null, null, "disqus_thread", new { slug = Model.Slug }, null)</span>
    </header>
    <footer>
        @Html.ActionLink("read more...", "Details", "Post", new { slug = Model.Slug }, null)
    </footer>
</article>